<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Views (Templates)</h2>
    <a href="/admin/views/new" class="btn btn-primary">Add New View</a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Content Preview</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @views.each do |view| %>
                <tr>
                    <td><strong><%= view.name %></strong></td>
                    <td><small class="text-muted"><%= view.content[0..50] %><%= '...' if view.content.length > 50 %></small></td>
                    <td class="text-end">
                        <a href="/admin/views/<%= view.id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <form action="/admin/views/<%= view.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?')">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% end %>
                <% if @views.empty? %>
                <tr>
                    <td colspan="3" class="text-center py-4 text-muted">No views found.</td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
